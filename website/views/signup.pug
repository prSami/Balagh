      .form1
        h1.text-center &#x627;&#x644;&#x62A;&#x633;&#x62C;&#x64A;&#x644;
        form(action='/signup', method='POST')
          .form-row
            .form-group.col-md-12
              label(for='user_full_name') الاسم بالكامل
              input#username.form-control(type='text',name='user_full_name' required='')
            .form-group.col-md-12
              label(for='user_id_number') رقم الهوية
              input#IDNumber.form-control(type='number', required='true', name='user_id_number')
          .form-group
            label.form-label(for='user_mobile') الجوال
            input#phone.form-control(type='number', required='true', name='user_mobile')
          .form-group
            label.form-label(for='user_email') البريد الالكتروني
            input#email.form-control(type='email', name='user_email', required='true')
          .form-group
            label.form-label(for='user_password') كلمة المرور
            input#password.form-control(type='password', name='user_password', required='true')
            input.btn.btn-success.w-100(type='submit', value='تسجيل')
        a.btn.w-100(href='/home') تسجيل الدخول